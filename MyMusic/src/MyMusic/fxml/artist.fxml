<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import com.sun.javafx.scene.control.skin.TableHeaderRow?>
<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="MyMusic.Controller" alignment="CENTER">
    <VBox spacing="15">
        <HBox styleClass="tabBar" alignment="CENTER">
            <padding><Insets top="10"></Insets></padding>
            <Button text="Your Music"/>
            <Button text="Find Music"/>
        </HBox>

        <Line startX="-800" endX="800"></Line>


        <HBox spacing="25">
            <ImageView fx:id="artistImage" fitWidth="200" fitHeight="200">
                <image>
                    <Image url="@musical-note.jpg" />
                </image>
            </ImageView>
            <VBox spacing="10">
                <Label text="Name" fx:id="artistNameLabel" styleClass="label-l"></Label>
            </VBox>
        </HBox>

        <Line startX="-800" endX="800"></Line>


        <HBox fx:id="albumsList" spacing="25">
            <VBox spacing="5">
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@musical-note.jpg" />
                    </image>
                </ImageView>
                <Label text="Name" styleClass="label-s"></Label>
            </VBox>

            <VBox spacing="5">
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@musical-note.jpg" />
                    </image>
                </ImageView>
                <Label text="Name" styleClass="label-s"></Label>
            </VBox>

            <VBox spacing="5">
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@musical-note.jpg" />
                    </image>
                </ImageView>
                <Label text="Name" styleClass="label-s"></Label>
            </VBox>

            <VBox spacing="5">
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@musical-note.jpg" />
                    </image>
                </ImageView>
                <Label text="Name" styleClass="label-s"></Label>
            </VBox>

            <VBox spacing="5">
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@musical-note.jpg" />
                    </image>
                </ImageView>
                <Label text="Name" styleClass="label-s"></Label>
            </VBox>



        </HBox>

        <Line startX="-800" endX="800"></Line>

        <Label text="Tracks" styleClass="tracks-label"></Label>
        <HBox>
            <TableView minWidth="1600">
                <columns>
                    <TableColumn text="Play"></TableColumn>
                    <TableColumn text="Name"></TableColumn>
                    <TableColumn text="Time"></TableColumn>
                    <TableColumn text="Artist"></TableColumn>
                    <TableColumn text="Album"></TableColumn>
                    <TableColumn text="Genre"></TableColumn>
                    <TableColumn text="Plays"></TableColumn>
                    <TableColumn text="Yours"></TableColumn>
                </columns>
            </TableView>
        </HBox>

    </VBox>
</HBox>
